<!DOCTYPE html>
<html></html>
<head>
  <title>Projects</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to "All Projects", root_path, class: "btn btn-primary" %>
      </div>
      <div>
        <ul class="navbar-text navbar-right">
            <% if user_signed_in? %>
  							<%= link_to "New Project", new_project_path, class: "btn btn-default" %>
  							<%= link_to 'Account', edit_user_registration_path, class: "btn btn-default" %>
  							<%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "btn btn-default"%>
  					<% else -%>
  							<%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default" %>
  							<%= link_to 'Sign in', new_user_session_path, class: "btn btn-default" %>
  					<% end -%>
        </ul>
      </div>

    </div>
  </nav>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert" %>
    <% end %>

    <%= yield %>

  </div>
</body>
